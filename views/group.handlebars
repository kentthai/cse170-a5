  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/home.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700&display=swap" rel="stylesheet">

    <script src="https://code.jquery.com/jquery.js"></script>
  </head>
  <body class="background">

    <div class="container">

      {{#each foodItems}}
        <div class="square" id="{{id}}">
          <div class="picture">
            <img src="{{imageURL}}" alt="{{imageName}}"></img>
          </div>

          <div class="options">

            <div class="option" id="share">
              <a href="#share">
                <img src="images/icons/claim.svg" alt="share" class="button move" id="group{{id}}"></img>
              </a>
            </div>

            <div class="option" id="remove">
              <a href="#remove" class="remove">
                <img src="images/icons/remove.svg" alt="remove" class="button remove" id={{id}}></img>
              </a>
            </div>

          </div>
        </div>
      {{/each}}

      <div class="add">
        <div class="picture">
          <a href="#add">
            <img src="images/icons/add.png" alt="add"></img>
          </a>
        </div>
      </div>

<!--
