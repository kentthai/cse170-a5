  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/home.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700&display=swap" rel="stylesheet">

    <script src="https://code.jquery.com/jquery.js"></script>
  </head>
  <body class="background">

    <div class="container">

      {{#each foodItems}}
        <div class="square" id="{{id}}">
          <div class="picture">
            <img src="{{imageURL}}" alt="{{imageName}}"></img>
          </div>

          <div class="options">

            <div class="option" id="share">
              <a href="#share">
                <img src="images/icons/share.svg" alt="share" class="button move" id="food{{id}}"></img>
              </a>
            </div>

            <div class="option" id="remove">
              <a href="#remove" class="remove">
                <img src="images/icons/remove.svg" alt="remove" class="button remove" id={{id}}></img>
              </a>
            </div>

          </div>
        </div>
      {{/each}}

      <div class="add">
        <div class="picture">
          <a href="#add">
            <img src="images/icons/add.png" alt="add"></img>
          </a>
        </div>
      </div>


      <div id="addForm" class = "hidden">

        <h1>Add an item</h1>
        <small>Add as much information as possible!</small>

        <form role="form" method="get" action="/add">
          <input placeholder="Food Name" type="text" required name="name"/>
          <input placeholder="Amount" type="email" required />
          <input placeholder="Purchase Date" type="text"/>
          <input placeholder="Owner" type="text"/>
          <button placeholder="OK" class="OkButton" type="OK"> OK </button>
          <button placeholder="Cancel" class="CancelButton" type="Cancel">Cancel </button>
        </form>
      </div>


    </div>



    <div class="navbar">
      <div class="tab active">
        <a href="/">
          <img src="images/icons/personal.svg" alt="personal" class="icon"></img>
        </a>
        <!-- personal -->
      </div>

      <div class="tab">
        <a href="/group">
          <img src="images/icons/groupGrey.svg" alt="group" class="icon"></img>
        </a>
      </div>

      <div class="tab">
        <a href="/camera">
          <img src="images/icons/cameraGrey.svg" alt="camera" class="icon"></img>
        </a>
      </div>

      <div class="tab">
        <a href="/settings">
          <img src="images/icons/settingsGrey.svg" alt="settings" class="icon"></img>
        </a>
      </div>
    </div>


    <script src="js/home.js"></script>
  </body>
</html>

